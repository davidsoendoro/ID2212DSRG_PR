	<ImageView
	    android:id="@+id/new_game_pvp_online"
	    android:layout_width="wrap_content"
	    android:layout_height="60dip"
	    android:layout_alignLeft="@+id/title"
	    android:layout_below="@+id/title"
	    android:layout_marginTop="20dp"
	    android:background="@drawable/new_game_pvp_online" />

	<ImageView
	    android:id="@+id/new_game_pvc_online"
	    android:layout_width="wrap_content"
	    android:layout_height="60dip"
	    android:layout_alignLeft="@+id/new_game_pvp_online"
	    android:layout_below="@+id/new_game_pvp_online"
	    android:background="@drawable/new_game_pvc_online" />

	<ImageView
	    android:id="@+id/new_game_pvc_offline"
	    android:layout_width="wrap_content"
	    android:layout_height="60dip"
	    android:layout_alignLeft="@+id/new_game_pvc_online"
	    android:layout_below="@+id/new_game_pvc_online"
	    android:background="@drawable/new_game_pvc_offline" />

	<ImageView
	    android:id="@+id/new_game_pvp_p2p"
	    android:layout_width="wrap_content"
	    android:layout_height="60dip"
	    android:layout_alignLeft="@+id/new_game_pvc_offline"
	    android:layout_below="@+id/new_game_pvc_offline"
	    android:background="@drawable/new_game_pvp_p2p" />
	<ImageView
	    android:id="@+id/quit"
	    android:layout_width="wrap_content"
	    android:layout_height="60dip"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentLeft="true"
	    android:layout_marginBottom="28dp"
	    android:background="@drawable/quit" 
	    android:layout_marginRight="5dip"
		android:layout_marginTop="20dip"/>
    
</RelativeLayout>